                            <li class="msg">Salvando alteração...</li>
                        </ul>
                    </div -->
            {% endblock %}

                </div><!-- / sidebar -->
        {% endblock %}

            {% block main %}
                <div id="main" class="grid_12">
                    <div class="full_w">
                {% block body %}{% endblock %}
