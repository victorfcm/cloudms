{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Header</th>
                <th>Content</th>
                <th>Footer</th>
                <th>Posttypeid</th>
                <th>Userid</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_cshow', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.header }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.footer }}</td>
                <td>{{ entity.postTypeId }}</td>
                <td>{{ entity.userId }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('d/m/Y H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('d/m/Y H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_cshow', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_cedit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_cnew') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
