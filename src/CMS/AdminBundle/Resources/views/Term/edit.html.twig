{% extends '::base.html.twig' %}

{% block body -%}
<div class="h_title">{{ taxonomy }} > Editar</div>

<form id="edit-form" action="{{ path('term_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
</form>

<div class="general-btns btns">
    <button type="button" onclick="$('#edit-form').submit();" class="save">Salvar</button>
    <button type="button" onclick="window.history.back(1)" class="cancel">Voltar</button>
    <form action="{{ path('term_cdelete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button type="submit" class="delete">Excluir</button>
    </form>
</div>
</ul>
{% endblock %}
