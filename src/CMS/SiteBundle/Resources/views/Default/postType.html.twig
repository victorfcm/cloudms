{% extends '::base_site.html.twig' %}

{% block body -%}
    <h1>
        {{ postType.name }}
    </h1>
    <div>
        {{ postType.description|raw }}
    </div>
    <div>
        {% for post in postType.posts %}
            <h3>{{ post.title }}</h3>
            <p>
                {{ post.content|raw }}
            </p>
        {% endfor %}
    </div>
{% endblock %}